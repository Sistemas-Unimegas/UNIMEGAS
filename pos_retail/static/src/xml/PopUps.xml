                    <span class='product combo-item item-selected' t-att-data-id="cross_item.id">
                        <div class="product-img-big">
                            <img t-att-src='image_url + cross_item.product_id[0]'/>
                        </div>
                        <div class="product-name box-product-name">
                            <t t-esc="cross_item.product_id[1]"/>
                            <span class="price-tag-left">
                                [ Disc:
                                <t t-esc="cross_item.discount"/>
                                % ]
                            </span>
                            <span class="price-tag-bottom-right">
                                [ Quantity:
                                <t t-esc="cross_item.quantity"/>
                                ]
                            </span>
                        </div>
                        <span class="price-tag" data-tag="price-tag"
                              t-att-style="widget.pos._get_style_by_element_tag('price-tag')">
                            <t t-esc="widget.format_currency(cross_item.list_price)"/>
                        </span>
                    </span>
                </t>
                <t t-if="!cross_item.selected">
                    <span class='product combo-item' t-att-data-id="cross_item.id">
                        <div class="product-img-big">
                            <img t-att-src='image_url + cross_item.product_id[0]'/>
                        </div>
                        <div class="product-name box-product-name">
                            <t t-esc="cross_item.product_id[1]"/>
                            <span class="price-tag-left">
                                [ Disc:
                                <t t-esc="cross_item.discount"/>
                                %
                                ]
                            </span>
                            <span class="price-tag-bottom-right">
                                [ Quantity:
                                <t t-esc="cross_item.quantity"/>
                                ]
                            </span>
                        </div>
                        <span class="price-tag" data-tag="price-tag"
                              t-att-style="widget.pos._get_style_by_element_tag('price-tag')">
                            <t t-esc="widget.format_currency(cross_item.list_price)"/>
                        </span>
                    </span>
                </t>
            </t>
        </t>
    </t>

