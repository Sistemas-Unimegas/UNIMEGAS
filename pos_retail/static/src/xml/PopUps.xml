    <t t-name="popup_create_purchase_order">
        <div role="dialog" class="modal-dialog">
            <div class="popup medium-form touch-scrollable scrollable-y">
                <div class="card">
                    <div class="card-content">
                        <h4 class="card-title"><t t-esc=" widget.options.title || '' " /></h4>
                        <div class="client-details-box clearfix">
                            <div class="client-details-left">
                                <div class="row">
                                    <label class="label voucher-label">Currency</label>
                                    <select class='form-control voucher-select po-field input_required'
                                            name='currency_id'>
                                        <t t-if="widget.pos.currencies">
                                            <t t-foreach='widget.pos.currencies' t-as='currency'>
                                                <option t-att-value='currency.id'
                                                        t-att-selected="currency['id'] ? ((currency['id'] === widget.pos.currency.id) ? true : undefined) : undefined">
                                                    <t t-esc='currency.name'/>
                                                </option>
                                            </t>
                                        </t>
                                    </select>
                                </div>
                                <div class="row">
                                    <label class="label voucher-label">Notes</label>
                                    <input class='form-control po-field' name="notes"/>
                                </div>
                            </div>
                            <div class="client-details-right">
                                <div class="row">
                                    <label class='label voucher-label'>Receipt Date  <i class="fa fa-calendar"></i></label>
                                    <input class="form-control po-field datetimepicker input_required"
                                           name="date_planned"/>
                                </div>
                                <t t-if="widget.pos.config.create_purchase_order_required_signature">
                                    <br/>
                                    <div class="row">
                                        <label class="label voucher-label">Signature</label>
                                        <div class="pos_signature input_required" name="pos_signature"/>
                                    </div>
                                </t>
                            </div>
                        </div>
                        <span class="card-issue"/>
                        <div class="form-footer text-center">
                            <div class="btn btn-success pull-right confirm">
                                Confirm <i class="fa fa-keyboard"></i> (Enter)
                            </div>
                            <div class="btn btn-danger pull-left cancel">
                                Close <i class="fa fa-keyboard"></i> (ESC)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>

    <t t-name="popup_add_order_line_note">
        <div class="modal-dialog">
            <div class="popup popup-text" style="max-height: 600px;min-height: 300px;height: fit-content;">
                <div class="card">
                    <div class="card-content">
                        <h4 class="card-title"><t t-esc=" widget.options.title || '' " /></h4>
                        <div class="row">
                            <label class="label voucher-label">Note</label>
                            <input type='text' t-att-value="widget.options.value || ''"></input>
                        </div>
                        <t t-if="widget.options.notes">
                            <div class="table-responsive">
                                <div class="body">
                                    <t t-foreach="widget.options.notes" t-as="note">
                                        <span class="left_button note" t-att-data-id="note.id">
                                            <div class="button-icon">
                                                <img src="/pos_retail/static/src/icons/note.png" class="pos_logo"/>
                                            </div>
                                            <div class="button-name">
                                                <t t-esc="note.name"/>
                                            </div>
                                        </span>
                                    </t>
                                </div>
                            </div>
                        </t>
                    </div>
                    <div class="form-footer text-center">
                        <div class="btn btn-success pull-right confirm">
                            Add Notes <i class='fa fa-keyboard'/>
