    <t t-name="popup_select_variants">
        <div class="modal-dialog customize">
            <div class="popup touch-scrollable scrollable-y"
                 style="width: 900px; min-height: 500px; background: #fff; color: #000000">
                <p class="title">Choice Variants</p>
                <div class='selection scrollable-y touch-scrollable' style="max-height: 600px;height: fit-content;">
                    <div class='card-content'>
                    </div>
                </div>
                <span class="card-issue"/>
                <div class="form-footer text-center">
                    <div class="btn btn-success pull-right confirm">
                        <i class="fa fa-check"/>Confirm
                    </div>
                    <div class="btn btn-danger pull-right remove_variants_selected">
                        <i class="fa fa-trash"/>Remove Variants Selected
                    </div>
                    <div class="btn btn-danger pull-left cancel">
                        Close
                    </div>
                </div>
            </div>
        </div>
    </t>

    <t t-name="attribute_variant_list">
        <t t-if="attribute_ids">
            <t t-foreach="attribute_ids" t-as="attribute_id">
                <t t-set="variants" t-value="variants_by_product_attribute_id[attribute_id]"/>
                <t t-set="attribute" t-value="widget.pos.product_attribute_by_id[attribute_id]"/>
                <t t-set="multi_choice" t-value="attribute.multi_choice"/>
                <span class="label voucher-label" style="color: blue"><t t-esc="attribute.name"/></span>
                <div class="card-content">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <tbody>
                                <t t-set="count" t-value="1"/>
                                <tr style="border-bottom: 1px solid">
                                    <td class="text-center" width='5%'>No.</td>
                                    <td class="text-left" width='30%'>Name</td>
                                    <td class="text-right" width='15%'>Qty</td>
                                    <td class="text-right" width='20%'>Price Extra</td>
                                </tr>
                                <t t-foreach="variants" t-as="variant">
                                    <tr t-attf-class="line-select #{variant.selected ? 'item-selected' : '' }"
                                        t-att-data-id="variant.id">
                                        <td class="text-center"><t t-esc="count"/></td>
                                        <td class="text-left"><t t-esc="variant.value_id[1]"/> </td>
                                        <td class="text-right"><t t-esc="variant.quantity"/></td>
                                        <td class="text-right"><t t-esc="widget.format_currency(variant.price_extra, 'Price Extra')"/> </td>
                                    </tr>
                                    <t t-set="count" t-value="count + 1"/>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </div>
            </t>
        </t>
    </t>

    <t t-name="users_list">
        <t t-if="configs">
            <t t-foreach="configs" t-as="config">
                <span class='left_button config' t-att-data-id="config.id">
                    <div class="button-icon">
                        <img src="/pos_retail/static/src/icons/sync.png" class="pos_logo"/>
                    </div>
                    <div class="button-name">
                        <t t-esc="config.user_id[1]"/>
                    </div>
                </span>
            </t>
        </t>
    </t>

    <t t-name="CharPopUpWidget">
        <div role="dialog" class="modal-dialog">
            <div class="popup popup-number" style="height: 200px">
                <header class="title"><t t-esc=" widget.options.title || '' " /></header>
                <div class="row">
                    <input type="text" class="form-control"/>
                </div>
                <footer class="footer centered">
                    <div class="button cancel">
                        Cancel
                    </div>
                    <div class="button confirm">
                        Ok
                    </div>
                </footer>
            </div>
        </div>
    </t>

    <t t-name="SubmitForm">
        <div role="dialog" class="modal-dialog">
            <div class="popup full-form touch-scrollable scrollable-y">
                <div class="card">
                    <div class="card-content">
                        <h4 class="card-title"><t t-esc=" widget.options.title || '' " /></h4>
                        <div class="client-details-box clearfix">
                            <div class="client-details-left">
                                <div class="row">
                                    <label class="label voucher-label">Amount</label>
                                    <input type="number" class="form-control" id="cash_in_amount"/>
                                </div>
                            </div>
                            <div class="client-details-right">
                                <div class="row">
                                    <label class="label voucher-label">Amount</label>
                                    <input type="number" class="form-control" id="cash_in_amount"/>
                                </div>
                            </div>
                        </div>
                        <div class="form-footer text-center">
                            <div class="btn btn-success pull-right confirm">
                                Confirm <i class="fa fa-keyboard"></i> (Enter)
                            </div>
                            <div class="btn btn-danger pull-left cancel">
                                Close <i class="fa fa-keyboard"></i> (ESC)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>

</templates>
