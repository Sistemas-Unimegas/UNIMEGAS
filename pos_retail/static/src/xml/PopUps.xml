                        <div class="btn btn-danger pull-left cancel">
                            Close <i class='fa fa-keyboard'/>
                            (ESC)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>

    <t t-name="stock_move_line">
        <t t-set="count" t-value="1"/>
        <t t-foreach="move_lines || []" t-as="line">
            <tr>
                <td class="text-center"><t t-esc="count"/></td>
                <td>
                    <div class="checkbox">
                        <label>
                            <input class="line-select" type="checkbox" name="optionsCheckboxes" checked="true"
                                   t-att-data-id="line.id">
                                <span class="checkbox-material"><span class="check"></span></span>
                            </input>
                        </label>
                    </div>
                </td>
                <td class="text-right"><t t-esc="line.name"/> </td>
                <td class="text-right"><t t-esc="widget.format_currency(line.price_unit)"/></td>
                <td class="text-right qty">Qty: <t t-esc="line.product_uom_qty"/></td>
            </tr>
            <t t-set="count" t-value="count + 1"/>
        </t>
    </t>

    <t t-name="popup_set_guest">
        <div class="modal-dialog">
            <div class="popup touch-scrollable scrollable-y">
                <div class="card">
                    <div class="card-content">
                        <div class="row">
                            <span class='label voucher-label'>Guest name</span>
                            <t t-if="widget.pos.get_order()">
                                <input class="form-control guest_field"
                                       type="text"
                                       t-att-value="widget.pos.get_order().guest"
                                       name="guest"
                                       required="true"/>
                            </t>
                        </div>
                        <div class="row">
                            <span class='label voucher-label'>Guest number</span>
                            <t t-if="widget.pos.get_order()">
                                <input class="form-control guest_field"
                                       type="number"
                                       t-att-value="widget.pos.get_order().guest_number"
                                       name="guest_number"
                                />
                            </t>
                        </div>
                        <span class="card-issue"/>
                        <div class="form-footer text-center">
                            <div class="btn btn-success pull-right confirm">
                                Confirm <i class='fa fa-keyboard'/>
                                (Enter)
                            </div>
                            <div class="btn btn-danger pull-left cancel">
                                Close <i class='fa fa-keyboard'/>
                                (ESC)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>

    <t t-name="popup_select_tax">
        <div class="modal-dialog">
            <div class="popup touch-scrollable scrollable-y"
                 style="max-height: 600px;min-height: 300px;height: fit-content;">
                <div class="card">
                    <div class="card-content">
                        <h4 class="card-title">
                            <t t-if="widget.options.title">
                                <t t-esc="widget.options.title"/>
                            </t>
                        </h4>
                        <div class="table-responsive">
                            <div class='body'>
                            </div>
                            <span class="card-issue"/>
                            <div class="form-footer text-center">
                                <div class="btn btn-success pull-right confirm add_taxes">
                                    Confirm <i class='fa fa-keyboard'/>
                                    (Enter)
                                </div>
                                <div class="btn btn-danger pull-left cancel">
                                     Close <i class='fa fa-keyboard'/>
                                    (ESC)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>

    <t t-name="taxes_list">
        <t t-if="taxes">
            <t t-foreach="taxes" t-as="tax">
                <t t-if="tax.selected">
                    <span class='left_button tax-item item-selected' t-att-data-id="tax.id">
                        <div class="button-icon">
                            <img src="/pos_retail/static/src/icons/tax.png" class="pos_logo"/>
                        </div>
                        <div class="button-name">
                            <t t-esc="tax.amount"/>
                            %
                        </div>
                    </span>
                </t>
                <t t-if="!tax.selected">
                    <span class='left_button tax-item' t-att-data-id="tax.id">
                        <div class="button-icon">
                            <img src="/pos_retail/static/src/icons/tax.png" class="pos_logo"/>
                        </div>
                        <div class="button-name">
                            <t t-esc="tax.amount"/>
                            %
                        </div>
                    </span>
                </t>
            </t>
        </t>
    </t>

    <t t-name="popup_cash_in">
        <div class="modal-dialog">
            <div class="popup popup-text" style="max-height:150px">
                <div class="card">
                    <div class="card-content">
                        <div class="row">
                            <label class="label voucher-label">Reason</label>
                            <input type="text" class="form-control" id="cash_in_reason"/>
                        </div>
                        <div class="row">
                            <label class="label voucher-label">Amount</label>
                            <input type="number" class="form-control" id="cash_in_amount"/>
                        </div>
                        <div class="form-footer text-center">
                            <div class="btn btn-success pull-right confirm">
                                Confirm <i class='fa fa-keyboard'/>
                                (Enter)
                            </div>
                            <div class="btn btn-danger pull-left cancel">
                                Close <i class='fa fa-keyboard'/>
                                (ESC)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>

    <t t-name="popup_cash_out">
        <div class="modal-dialog">
            <div class="popup popup-text" style="max-height:150px">
                <div class="card">
                    <div class="card-content">
                        <div class="row">
                            <label class="label voucher-label">Reason</label>
                            <input type="text" class="form-control" id="cash_out_reason"/>
                        </div>
                        <div class="row">
                            <label class="label voucher-label">Amount</label>
                            <input type="number" class="form-control" id="cash_out_amount"/>
                        </div>
                        <div class="form-footer text-center">
                            <div class="btn btn-success pull-right confirm">
                                Confirm <i class='fa fa-keyboard'/>
                                (Enter)
                            </div>
                            <div class="btn btn-danger pull-left cancel">
                                Close <i class='fa fa-keyboard'/>
                                (ESC)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
