<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-extend="NumberPopupWidget">
        <t t-jquery="button[class*='numpad-backspace']" t-operation="after">
            <button class="input-button number-char" data-action='-'>+/-</button>
        </t>
    </t>
    <t t-extend="ConfirmPopupWidget">
        <t t-jquery="div[class*='modal-dialog']" t-operation="replace">
            <div class="swal2-container swal2-fade swal2-in" style="overflow-y: auto;">
                <div class="swal2-modal swal2-show"
                     style="display: block; width: 500px; padding: 20px; background: rgb(255, 255, 255); min-height: 340px;"
                     tabindex="-1">
                    <ul class="swal2-progresssteps" style="display: none;"></ul>
                    <div class="swal2-icon swal2-error" style="display: none;">
                        <span class="x-mark">
                            <span class="line left"></span>
                            <span class="line right"></span>
                        </span>
                    </div>
                    <div class="swal2-icon swal2-warning pulse-warning" style="display: block;">!</div>
                    <div class="swal2-icon swal2-info" style="display: none;">i</div>
                    <div class="swal2-icon swal2-success" style="display: none;">
                        <span class="line tip"></span>
                        <span class="line long"></span>
                        <div class="placeholder"></div>
                        <div class="fix"></div>
                    </div>
                    <img class="swal2-image" style="display: none;"/>
                    <h2><t t-esc=" widget.options.title || 'Confirm ?' " /></h2>
                    <div class="swal2-content" style="display: block;"><t t-esc="  widget.options.body || '' "/>
                    </div>
                    <input class="swal2-input" style="display: none;"/>
                    <input type="file" class="swal2-file" style="display: none;"/>
                    <div class="swal2-range" style="display: none;">
                        <output></output>
                        <input type="range"/>
                    </div>
                    <select class="swal2-select" style="display: none;"></select>
                    <div class="swal2-radio" style="display: none;"></div>
                    <label for="swal2-checkbox" class="swal2-checkbox" style="display: none;">
                        <input type="checkbox"/>
                    </label>
                    <textarea class="swal2-textarea" style="display: none;"></textarea>
                    <div class="swal2-validationerror" style="display: none;"></div>
                    <hr class="swal2-spacer" style="display: block;"/>
                    <div class="footer">
                        <span type="button" class="swal2-confirm btn btn-success button confirm pull-left">Yes</span>
                        <span type="button" class="swal2-cancel btn btn-danger button cancel pull-right">Close <i
                                class='fa fa-keyboard'/>
                            (ESC)</span>
                    </div>
                </div>
            </div>
        </t>
    </t>

    <t t-name="alert_input">
        <div class="swal2-container swal2-fade swal2-in" style="overflow-y: auto;">
            <div class="swal2-modal swal2-show"
                 style="display: block; width: 500px; padding: 20px; background: rgb(255, 255, 255); min-height: 340px;"
                 tabindex="-1">
                <h2><t t-esc=" widget.options.title || 'Confirm ?' " /></h2>
                <div class="swal2-content" style="display: block;"><t t-esc="  widget.options.body || '' "/>
                </div>
                <div class="row" style="padding-bottom: 40px; padding-top: 40px">
                    <input type="text" class="input_form"
                           style="border:1px #c57272 !important; background: #9E9E9E; color: black"/>
                </div>
                <div class="footer">
                    <span type="button" class="swal2-confirm btn btn-success button confirm pull-left">Yes</span>
                    <span type="button" class="swal2-cancel btn btn-danger button cancel pull-right" style="right:0px">Close <i
                            class='fa fa-keyboard'/>
                        (ESC)</span>
                </div>
            </div>
        </div>
    </t>

    <t t-name="dialog">
        <div class="modal-dialog">
            <div class="popup">
                <t t-if="widget.options.title">
                    <p class="title"><t t-esc="widget.options.title"/></p>
                </t>
                <div>
                    <t t-raw="widget.message"/>
                </div>
                <div class="button cancel">
                    Close <i class='fa fa-keyboard'/>
                    (ESC)
                </div>
            </div>
        </div>
    </t>

    <t t-name="popup_internal_transfer">
        <div role="dialog" class="modal-dialog">
            <div class="popup medium-form touch-scrollable scrollable-y">
                <div class="card">
                    <div class="card-content">
                        <h4 class="card-title"><t t-esc=" widget.options.title || '' " /></h4>
                        <div class="client-details-box clearfix">
                            <div class="client-details-left">
                                <div class='row'>
                                    <span class='label voucher-label'>Picking Types</span>
                                    <select class='form-control voucher-select internal_transfer_field input_required'
                                            id="picking_type_id">
                                        <t t-if="widget.pos.stock_picking_types">
                                            <t t-foreach='widget.pos.stock_picking_types' t-as='stock_picking_type'>
                                                <option t-att-value='stock_picking_type.id'>
                                                    <t t-esc='stock_picking_type.name'/>
                                                </option>
                                            </t>
                                        </t>
                                    </select>
                                </div>
                                <div class='row'>
                                    <span class='label voucher-label'>Source Location</span>
                                    <select class='form-control voucher-select internal_transfer_field input_required'
                                            id="location_id">
                                        <t t-if="widget.pos.stock_locations">
                                            <t t-foreach='widget.pos.stock_locations' t-as='stock_location'>
                                                <option t-att-value='stock_location.id'>
                                                    <t t-esc='stock_location.display_name'/>
                                                    <t t-if="stock_location.barcode">
                                                        [ <t t-esc="stock_location.barcode"/> ]
                                                    </t>
                                                </option>
                                            </t>
                                        </t>
                                    </select>
                                </div>
                                <div class='row'>
                                    <span class='label voucher-label'>Destination Location</span>
                                    <select class='form-control voucher-select internal_transfer_field input_required'
                                            id="location_dest_id">
                                        <t t-if="widget.pos.stock_locations">
                                            <t t-foreach='widget.pos.stock_locations' t-as='stock_location'>
                                                <option t-att-value='stock_location.id'
                                                        t-att-selected="stock_location['id'] ? ((widget.pos.config.stock_location_id and stock_location.id === widget.pos.config.stock_location_id[0]) ? true : undefined) : undefined">
                                                    <t t-esc='stock_location.display_name'/>
                                                    <t t-if="stock_location.barcode">
                                                        [ <t t-esc="stock_location.barcode"/> ]
                                                    </t>
                                                </option>
                                            </t>
                                        </t>
                                    </select>
                                </div>
                            </div>
                            <div class="client-details-right">
                                <div class='row'>
                                    <span class='label voucher-label'>Shipping Policy</span>
                                    <select class='form-control voucher-select internal_transfer_field input_required'
                                            id="move_type">
                                        <option value='direct'>As soon as possible</option>
                                        <option value='one'>When all products are ready</option>
                                    </select>
                                </div>
                                <div class='row'>
                                    <span class='label voucher-label'>Priority</span>
                                    <select class='form-control voucher-select internal_transfer_field' id="priority">
                                        <option value='0'>Not Urgent</option>
                                        <option value='1'>Normal</option>
                                        <option value='2'>Urgent</option>
                                        <option value='3'>Very Urgent</option>
                                    </select>
                                </div>
                                <div class="row">
                                    <span class='label voucher-label'>Scheduled Date  <i class="fa fa-calendar"></i></span>
                                    <input type="text" class="form-control datetimepicker internal_transfer_field"
                                           id="scheduled_date"/>
                                </div>
                                <div class='row'>
                                    <span class='label voucher-label'>Note Description</span>
                                    <input type="text" class="popup-lot internal_transfer_field" id="note"
                                           placeholder="Note"/>
                                </div>
                            </div>
                        </div>
                        <span class="card-issue"/>
                        <div class="form-footer text-center">
                            <div class="btn btn-success pull-right confirm">
                                Confirm <i class="fa fa-keyboard"></i> (Enter)
                            </div>
                            <div class="btn btn-danger pull-left cancel">
                                Close <i class="fa fa-keyboard"></i> (ESC)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>

    <t t-name="popup_set_datetime">
        <div class="modal-dialog">
            <div class="popup touch-scrollable scrollable-y"
                 style="max-height: 600px;min-height: 300px;height: fit-content;">
                <div class="card">
                    <t t-if="widget.options.title">
                        <h4 class="card-title">
                            <t t-esc="widget.options.title"/>
                        </h4>
                    </t>
                    <div class="swal2-content"><t t-esc="  widget.options.body || '' "/></div>
