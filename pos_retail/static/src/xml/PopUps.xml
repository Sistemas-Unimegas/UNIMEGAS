    <t t-name="popup_add_lot_to_combo_items">
        <div class="modal-dialog">
            <div class="popup popup-text">
                <t t-if="widget.options.title">
                    <p class="title"><t t-esc="widget.options.title || '' " /></p>
                </t>
                <div class='packlot-lines'>
                    <t t-if="widget.options.combo_items">
                        <t t-foreach='widget.options.combo_items' t-as='item'>
