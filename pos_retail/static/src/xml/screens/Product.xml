<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="OrderSelectedLineDetail">
        <div class="selected-line-detail">
            <div class="card">
                <div class="card-content">
                    <t t-if="widget.selected_line">
                        <t t-set="line" t-value="widget.selected_line"/>
                        <div class='orderline_image'>
                            <img t-att-src='line.order.get_product_image_url(line.product)' alt="Product logo"
                                 style="width: 64px; height: 64px; object-fit: cover;"/>
                        </div>
                        <div class='product-detail-name'><t t-esc='line.product.display_name' /></div>
                        <div class="client-details-box clearfix">
                            <div class="client-details-left">
                                <div class="row">
                                    <span class="label voucher-label">Quantity</span>
                                    <input data-mode='quantity' class='form-control mode field_line' type="number"
                                           t-att-value='line.quantity || 0' name="quantity"/>
                                </div>
                                <div class="row">
                                    <span class="label voucher-label">Disc (%)</span>
                                    <input data-mode='discount' class='form-control mode field_line'
                                           t-att-value='line.discount || 0' name="discount"/>
                                </div>
                                <div class="row">
                                    <span class="label voucher-label">Taxes</span>
                                    <input data-mode='discount' class='form-control mode field_line'
                                           disabled="disabled"
                                           t-att-value='widget.format_currency(line.get_tax())' name="taxes"/>
                                </div>
                            </div>
                            <div class="client-details-right">
                                <div class="row">
                                    <span class="label voucher-label">Base Price</span>
                                    <input data-mode='price' class='form-control mode field_line' type="number"
                                           t-att-value='line.get_price_without_tax()' name="price"/>
                                </div>
                                <t t-if="widget.pos.config.display_amount_discount and line.get_price_discount() > 0">
                                    <div class="row">
                                        <span class="label voucher-label">Disc Value</span>
                                        <input class='form-control'
                                               disabled="disabled"
                                               t-att-value='widget.format_currency_no_symbol(line.get_price_discount())'
                                               name="disc_value"/>
                                    </div>
                                </t>
                                <t t-if="line.product.description">
                                    <div class="row">
                                        <span class="label voucher-label">Product Notes</span>
                                        <input data-mode='discount' class='form-control mode field_line'
                                               disabled="disabled"
                                               t-att-value='line.product.description' name="description"/>
                                    </div>
                                </t>
                                <t t-if="widget.pos.get_picking_source_location()">
                                    <div class="row">
                                        <span class="label voucher-label">Stock Location</span>
                                        <input class='form-control'
                                               disabled="disabled"
                                               t-att-value='widget.pos.get_picking_source_location().name'
                                               name="location"/>
                                    </div>
                                </t>
                                <t t-if="line.qty_available != underfine">
                                    <div class="row">
                                        <span class="label voucher-label">Qty Available</span>
                                        <input class='form-control'
                                               disabled="disabled"
                                               t-att-value='line.qty_available' name="stock"/>
                                    </div>
                                </t>
                            </div>
                        </div>
                    </t>
                    <span class="card-issue"/>
                    <div class="placeholder-NumpadWidgetWidget"></div>
                    <div class="form-footer text-center">
                        <div class="btn btn-success save">
                            Save Changes
                        </div>
                        <div class="btn btn-default close" style="float: left">
                            <i class="material-icons">visibility</i> Hide Box
                        </div>
                    </div>
                    <div class="line-detail">
                        <t t-if="widget.pos.config.sync_multi_session and widget.pos.config.display_person_add_line and line.session_info and line.session_info.user and line.session_info.date">
                            <div class="info">
                                <t t-esc="line.session_info.user.name"/>
                                added at
                                <t t-esc="line.session_info.date"/>
                            </div>
                        </t>
                        <t t-if="line.get_discount_str() !== '0'">
                            <div class="info">
                                With a
                                <t t-esc="line.get_discount_str()"/>%
                                Discount
                            </div>
                        </t>
                        <t t-if="widget.pos.config.display_margin">
                            <div class="info line-margin">
                                With Margin
                                <t t-esc="line.get_margin().toFixed(2)"/>%
                            </div>
                        </t>
                        <t t-if="line.discount_extra">
                            <div class="info">
                                Discount Extra: <t t-esc="line.discount_extra"/>
                                %
                            </div>
                        </t>
                        <t t-if="line.price_extra">
                            <div class="info">
                                Price Extra: <t t-esc="widget.format_currency(line.price_extra,'Product Price')"/>
                            </div>
                        </t>
                        <div class="info">
                            <t t-if="line.promotion_amount">
                                <ul class="bus-info">
                                    Promotion Amount: <t t-esc="widget.format_currency(line.promotion_amount)"/>
                                </ul>
                            </t>
                            <t t-if="line.promotion_discount">
                                <ul class="bus-info">
                                    Promotion Disc: <t t-esc="line.promotion_discount"/>
                                    %
                                </ul>
                            </t>
                            <t t-if="line.promotion_reason">
                                <ul class="bus-info">
                                    Promotion: <t t-esc="line.promotion_reason"/>
                                </ul>
                            </t>
                            <t t-if="line.discount">
                                <div>
                                    Amount discount: <t t-esc="widget.format_currency(line.get_price_discount())"/>
                                </div>
                            </t>
                            <t t-if="line.voucher">
                                <div>
                                    Voucher No: <t t-esc="line.voucher.number"/>
                                </div>
                                <div>
                                    Period Expired: <t t-esc="line.voucher.period_days"/>
                                    (Days)
                                </div>
                                <div>
                                    Voucher Value:
                                    <t t-if="line.voucher.apply_type == 'fixed_amount'">
                                        <t t-esc="widget.pos.gui.chrome.format_currency(line.voucher.value)"/>
                                    </t>
                                    <t t-else="">
                                        <t t-esc="line.voucher.value"/>
                                        %
                                    </t>
                                </div>
                            </t>
                            <t t-if="line.plus_point != 0">
                                <div class="line_plus_point">
                                    Plus point: <t t-esc="line._get_plus_point()"/>
                                </div>
                            </t>
                            <t t-if="line.redeem_point != 0">
                                <div class="line_redeem_point">
                                    Redeem point: <t t-esc="line.redeem_point"/>
                                </div>
                            </t>
                            <t t-if="line.get_packaging_added()">
                                <div class="packaging">
                                    <t t-if="line.get_packaging_added()">
                                        Packaging: <t t-esc="line.get_packaging_added().name"/>
                                    </t>
                                </div>
                            </t>
                            <t t-if="line.get_product_price_quantity_item()">
                                <ul class="bus-info">
                                    <t t-set="product_price_quantity" t-value="line.get_product_price_quantity_item()"/>
                                    Applied Price
                                    <t t-esc="widget.format_currency(product_price_quantity['price_unit'])"/>
                                    if bigger than or equal
                                    <t t-esc="product_price_quantity['quantity']"/>
                                    items
                                </ul>
                            </t>
                            <t t-if="line.combo_items">
                                Combo Bundle/Package:
                                <br/>
                                <t t-foreach="line.combo_items" t-as="combo_item">
                                    <t t-if="combo_item.quantity > 0">
                                        <ul class="bus-info">
                                            + <t t-esc="combo_item.quantity * line['quantity']"/>
                                            <t t-esc="widget.pos.generate_wrapped_name(combo_item.product_id[1])[0]"/>
                                            <t t-if="combo_item.lot_number">
                                                , with Lot/Serial number : <t t-esc="combo_item.lot_number"/>
                                            </t>
                                            <t t-if="combo_item.use_date">
                                                , with Expired Date of Lot: <t t-esc="combo_item.use_date"/>
                                            </t>
                                            <t t-if="combo_item.price_extra">
                                                , with Price Extra: <t
                                                    t-esc="widget.format_currency(combo_item.price_extra)"/>
                                            </t>
                                        </ul>
                                    </t>
                                </t>
                            </t>
                            <t t-if="line.selected_combo_items">
                                <t t-foreach="line.selected_combo_items" t-as="product_id">
                                    <t t-if="widget.pos.db.product_by_id[product_id]">
                                        <ul class="bus-info">
                                            + <t t-esc="line.selected_combo_items[product_id]"/>
                                            <t t-esc="widget.pos.generate_wrapped_name(widget.pos.db.product_by_id[product_id].name)[0]"/>
                                        </ul>
                                    </t>
                                </t>
                            </t>
                            <t t-if="line.is_return">
                                <ul class="bus-info">
                                    <li class="return_line">
                                        Is Return
                                    </li>
                                </ul>
                            </t>
                            <t t-if="line.get_sale_person()">
                                <ul class="bus-info">
                                    Seller: <t t-esc="line.get_sale_person().display_name"/>
                                </ul>
                            </t>
                            <t t-if="widget.pos.employee">
                                <ul class="bus-info">
                                    Employee: <t t-esc="widget.pos.employee.name"/>
                                </ul>
                            </t>
                            <t t-if="line.variants and line.variants.length">
                                <t t-foreach="line.variants" t-as="variant">
                                    <ul class="bus-info">
                                        <t t-esc="variant.value_id[1]"/>
                                        <span class='price'>
                                            <t t-esc="widget.format_currency(variant.price_extra, 'Price extra')"/>
                                        </span>
                                    </ul>
                                </t>
                            </t>
                            <t t-if="line.pack_lot_lines and line.pack_lot_lines.length">
                                <t t-set="lot" t-value="line.pack_lot_lines.models[0]"/>
                                <t t-set="lot_values" t-value="lot.attributes"/>
                                <t t-if="lot_values['lot_name']">
                                    <ul class="bus-info">
                                        Lot: <t t-esc="lot_values['lot_name']"/>
                                        <t t-if="lot_values['lot']">
                                            <t t-if="lot_values['lot']['barcode']">
                                                Lot Barcode: <t t-esc="lot_values['lot']['barcode']"/>
                                            </t>
                                            <t t-if="lot_values['lot']['life_date']">
                                                Expired date: <t t-esc="lot_values['lot']['life_date']"/>
                                            </t>
                                        </t>
                                    </ul>
                                </t>
                            </t>
                            <t t-if="line.product and line.product.tracking == 'lot' and line.lot_ids and line.lot_ids.length"> <!-- // line multi lots -->
                                <ul class="bus-info">
                                    <t t-foreach="line.lot_ids" t-as="lot">
                                        <div>
                                            Lot Serial:
                                            <t t-esc="lot.name"/>
                                            x
                                            <t t-esc="lot.quantity"/>
                                        </div>
                                    </t>
                                </ul>
                            </t>
                            <t t-if="line.get_line_note()">
                                <ul class="bus-info">
                                    <t t-esc="line.get_line_note()"/>
                                </ul>
                            </t>
                            <t t-if="line.tags and line.tags.length">
                                <ul class="bus-info">
                                    <t t-foreach="line.tags" t-as="tag">
                                        <span t-att-data-id="tag.id">
                                            <t t-esc="tag.name"/>
                                        </span>
                                    </t>
                                </ul>
                            </t>
                            <t t-if="line.discount_reason">
                                <ul class="bus-info">
                                    Discount reason: <t t-esc="line.discount_reason"/>
                                </ul>
                            </t>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>

    <t t-name="ProductSortBy">
        <div class="category-list product-sort-by">
            <span class="category-simple-button js-category-switch service" id="a_z">
                Name: A to Z
            </span>
            <span class="category-simple-button js-category-switch service" id="z_a">
                Name: Z to A
            </span>
            <span class="category-simple-button js-category-switch service" id="low_price">
                Low Price
            </span>
            <span class="category-simple-button js-category-switch service" id="high_price">
                High Price
            </span>
            <span class="category-simple-button js-category-switch service" id="pos_sequence">
                Product Sequence
            </span>
            <span class="category-simple-button js-category-switch service" id="low_stock">
                Low Stock
            </span>
            <span class="category-simple-button js-category-switch service" id="high_stock">
                High Stock
            </span>
            <span class="category-simple-button js-category-switch service" id="voucher">
                Voucher
            </span>
            <span class="category-simple-button js-category-switch service" id="credit">
                Credit
            </span>
            <span class="category-simple-button js-category-switch service" id="cross_selling">
                Cross Selling
            </span>
            <span class="category-simple-button js-category-switch service" id="service">
                Only Service
            </span>
            <span class="category-simple-button js-category-switch service" id="lot">
                Tracking By Lot
            </span>
            <span class="category-simple-button js-category-switch service" id="serial">
                Tracking By Serial
            </span>
            <span class="category-simple-button js-category-switch service" id="all">
                Show All
            </span>
            <span class="category-simple-button js-category-switch numpad-backspace">
                <img src="/point_of_sale/static/src/img/backspace.png" width="24" height="21" alt="Backspace"/>
            </span>
        </div>
    </t>

    <t t-name="product_name">
        <span class="product-line-name" style="display: block">
            <t t-esc="product.display_name"/>
            <t t-if="product.name_second and widget.pos.config.display_product_second_name">
                <t t-esc="product.name_second"/>
            </t>
        </span>
    </t>

    <t t-name="product_onhand">
        <t t-if="product['type'] == 'product'">
            <span class="qty_available" title="Stock on Hand of Product">
                <span class="value">
                    <t t-if="product.qty_available &gt; 0 or product.qty_available &lt; 0">
                        <t t-esc="product.qty_available.toFixed(0)"/>
                    </t>
                    <t t-if="product.qty_available == 0 or !product.qty_available">
                        0
                    </t>
                </span>
                <t t-if="product.tracking!=='none'">
                    <i class="oe_link_icon fa fa-list oe_icon line-lot-icon"></i>
                </t>
            </span>
        </t>
    </t>

    <t t-name="OrderLineSelected">
        <div t-attf-class="orderline-selected #{widget.selected_line ? '' : 'oe_hidden' }">
            <div class="orderline-name">
                <t t-if="widget.selected_line">
                    <t t-esc="widget.selected_line.product.display_name"/>
                    x
                    <t t-esc="widget.selected_line.quantity"/>
                </t>
            </div>
            <div class="orderline-qty">
                <div class="row">
                    <t t-if="widget.selected_line">
                        <input class="form-control quantity" disabled="disabled" t-att-value="widget.gui.chrome.format_currency(widget.selected_line.price)"/>
                    </t>
                    <button class="btn btn-success pull-left plus" style="margin: 0px;border-radius: 0px;max-width: 5%;font-size: 13px">
                        <i class="material-icons">add</i>
                    </button>
                    <t t-if="widget.selected_line">
                        <input class="form-control quantity" disabled="disabled" t-att-value="widget.selected_line.quantity"/>
                    </t>
                    <button class="btn btn-danger pull-left minus" style="margin: 0px;border-radius: 0px;max-width: 5%;font-size: 13px">
                        <i class="material-icons">remove</i>
                    </button>
                    <t t-if="widget.selected_line">
                        <input class="form-control quantity" disabled="disabled" t-att-value="widget.gui.chrome.format_currency(widget.selected_line.get_display_price())"/>
                    </t>
                    <button class="btn btn-danger pull-left remove" style="margin: 0px;border-radius: 0px;max-width: 5%;font-size: 13px">
                        <i class="material-icons">clear</i>
                    </button>
                </div>
            </div>
        </div>
    </t>

    <t t-name="ViewCartListWidget">
        <div class="view-cart-list">
            <t t-if="!widget.pos.display_cart_list">
                <div class="total_items_in_bottom_cart">
                    <i class="material-icons">shopping_cart</i>
                    <span class="items-incart">
                        <t t-esc="widget.total_items"/>
                    </span>
                </div>
            </t>
            <button class="btn btn-success pull-left add-new-order">
                <i class="material-icons">add</i>
                <span class="keyboard-shortcut">
                    <i class="fa fa-keyboard"/>
                    N
                </span>
            </button>
            <button class="btn btn-danger pull-left remove-selected-order">
                <i class="material-icons">remove</i>
                <span class="keyboard-shortcut">
                    <i class="fa fa-keyboard"/>
                    R
                </span>
            </button>
            <t t-if="widget.pos.config.quickly_payment_full">
                <button class="btn btn-default checkout-full">
                    Finalizar
                    <span class="keyboard-shortcut">F</span>
                </button>
            </t>
            <div class="open-cart-list">
                <span class="customer-name">
                    <t t-if="widget.selected_order and widget.selected_order.get_client()">
                        <t t-esc="widget.selected_order.get_client().name"/>
                    </t>
                    <t t-else="">
                        Clientes
                    </t>
                    <span class="keyboard-shortcut">
                        <i class="fa fa-keyboard"/>
                        C o Espacio
                    </span>
                </span>
                <button class="button checkout">
                    Finalizar
                    <span class="keyboard-shortcut">
                        <i class="fa fa-keyboard"/>
                        Enter
                    </span>
                </button>
                <span style="padding-left: 20px; float: right; color: blue" class="cart-detail">
                    <t t-if="widget.pos.display_cart_list == false">
                        Ver carrito <i class="material-icons">recibo</i>
                    </t>
                    <t t-else="">
                        Ocultar carrito <i class="material-icons">recibo</i>
                    </t>
                    <span class="keyboard-shortcut">m</span>
                    <span class="amount_total">
                        <t t-esc="widget.total_with_tax"/>
                    </span>
                </span>
            </div>
        </div>
    </t>

    <t t-name="RightPaneScreen">
        <div class="pos-screens-list">
        </div>
    </t>

    <t t-extend="ProductListWidget">
        <t t-jquery="div[class='product-list-container']" t-operation="replace">
            <t t-if="widget.pos.config.product_view == 'list'">
                <div class='product-list-container'>
                    <div class="categories_list"/>
                    <div class='payment-screen-container'/>
                    <div class='receipt-screen-container'/>
                    <div class="product-list-scroller touch-scrollable">
                        <div class="product-list-sale-extra" style="display:none"/>
                        <div class="product-list">
                        </div>
                        <table class="product-list list">
                            <thead>
                                <tr class="header-table">
                                    <t t-if="!widget.pos.config.hide_product_image">
                                        <th></th>
                                    </t>
                                    <th class="text-left"><a href="#" class="sort sort_by_product_default_code">Código</a></th>
                                    <th class="text-left"><a href="#" class="sort sort_by_product_name">Nombre</a></th>
                                    <th class="text-right"><a href="#" class="sort sort_by_product_list_price">Precio de Venta</a></th>
                                    <t t-if="widget.pos.config.display_cost_price">
                                        <th class="text-right"><a href="#" class="sort sort_by_product_standard_price">Costo</a></th>
                                    </t>
                                    <t t-if="widget.pos.config.display_sale_price_within_tax">
                                        <th class="text-right">Precio con IVA</th>
                                    </t>
                                    <t t-if="widget.pos.config.display_onhand">
                                        <th class="text-right"><a href="#" class="sort sort_by_product_qty_available">Inventario</a></th>
                                    </t>
                                </tr>
                            </thead>
                            <tbody class='product-list-contents'>
                            </tbody>
                        </table>
                    </div>
                    <span class="placeholder-ScrollbarWidget"/>
                    <div class="placeholder-SelectedLineDetail"/>
                </div>
            </t>
            <t t-if="widget.pos.config.product_view == 'box'">
                <div class='product-list-container'>
                    <div class="categories_list"/>
                    <div class='payment-screen-container'/>
                    <div class='receipt-screen-container'/>
                    <t t-if="widget.pos.config.allow_add_product">
                        <div class="product-list-scroller touch-scrollable">
                            <div class="product-list-sale-extra" style="display:none"/>
                            <div class="product-list">
                            </div>
                        </div>
                    </t>
                    <t t-if="!widget.pos.config.allow_add_product">
                        <div class="product-list-scroller touch-scrollable" style="display:none">
                            <div class="product-list-sale-extra" style="display:none"/>
                            <div class="product-list" style="display:none">
                            </div>
                        </div>
                    </t>
                    <span class="placeholder-ScrollbarWidget"/>
                    <span class="placeholder-SelectedLineDetail"/>
                </div>
            </t>
        </t>
    </t>

    <t t-name="ProductPrice">
        <t t-if="widget.pos.config.display_sale_price_within_tax">
            <t t-if="!product.to_weight">
                <span class="price-tag" title="Tax not Included" data-tag="price-tag"
                      t-att-style="widget.pos._get_style_by_element_tag('price-tag')">
                    <t t-esc="widget.format_currency(widget.pos.get_price_with_tax(product, pricelist), 'Product Price')"/>
                    <span class="cart_qty oe_hidden">
                        <i class="material-icons">carrito</i>
                        <span class="add_shopping_cart">0</span>
                    </span>
                </span>
            </t>
            <t t-if="product.to_weight">
                <span class="price-tag" title="Tax not Included" data-tag="price-tag"
                      t-att-style="widget.pos._get_style_by_element_tag('price-tag')">
                    <t t-esc="widget.format_currency(widget.pos.get_price_with_tax(product, pricelist), 'Product Price') + '/' + widget.pos.units_by_id[product.uom_id[0]].name"/>
                    <span class="cart_qty oe_hidden">
                        <i class="material-icons">carrito</i>
                        <span class="add_shopping_cart">0</span>
                    </span>
                </span>
            </t>
        </t>
        <t t-if="!widget.pos.config.display_sale_price_within_tax">
            <t t-if="!product.to_weight">
                <span class="price-tag" title="Tax Included" data-tag="price-tag"
                      t-att-style="widget.pos._get_style_by_element_tag('price-tag')">
                    <i class="fa fa-compress-alt"/>
                    <t t-esc="widget.format_currency(product.get_price(pricelist, 1), 'Product Price')"/>
                    <span class="cart_qty oe_hidden">
                        <i class="material-icons">carrito</i>
                        <span class="add_shopping_cart">0</span>
                    </span>
                </span>
            </t>
            <t t-if="product.to_weight">
                <span class="price-tag" title="Tax Included" data-tag="price-tag"
                      t-att-style="widget.pos._get_style_by_element_tag('price-tag')">
                    <i class="fa fa-compress-alt"/>
                    <t t-esc="widget.format_currency(product.get_price(pricelist, 1), 'Product Price')  + '/' + widget.pos.units_by_id[product.uom_id[0]].name"/>
                    <span class="cart_qty oe_hidden">
                        <i class="material-icons">carrito</i>
                        <span class="add_shopping_cart">0</span>
                    </span>
                </span>
            </t>
        </t>
    </t>

    <t t-name="Product">
        <t t-if="widget.pos.config.product_view == 'list'">
            <tr class='product-list' t-att-data-product-id="product.id"
                t-att-data-product-tmpl-id="product.product_tmpl_id">
                <t t-if="!widget.pos.config.hide_product_image">
                    <td>
                        <img class='product_list_image' t-att-src='image_url'/>
                    </td>
                </t>
                <td class="text-left">
                    <t t-if="product['default_code']">
                        <t t-esc="product['default_code']"/>
                    </t>
                    <t t-if="!product['default_code']">
                        N/A
                    </t>
                </td>
                <td class="text-left product-name-list">
                    <t t-call="product_name"/>
                </td>
                <td class="text-right product-name-list">
                    <t t-call="ProductPrice"/>
                </td>
                <t t-if="widget.pos.config.display_cost_price">
                    <td class="text-right">
                        <span class="price-tag text-right" data-tag="price-tag"
                              t-att-style="widget.pos._get_style_by_element_tag('price-tag')">
                            <t t-esc="widget.format_currency(product.standard_price, 'Product Price')"/>
                        </span>
                    </td>
                </t>
                <t t-if="widget.pos.config.display_sale_price_within_tax">
                    <td class="text-right">
                        <span class="price-tag text-right" data-tag="price-tag"
                              t-att-style="widget.pos._get_style_by_element_tag('price-tag')">
                            <t t-esc="widget.format_currency(widget.pos.get_price_with_tax(product, pricelist), 'Product Price')"/>
                        </span>
                    </td>
                </t>
                <td class="text-right">
                    <t t-if="widget.pos.config.display_onhand">
                        <t t-call="product_onhand"/>
                    </t>
                </td>
            </tr>
        </t>
        <t t-if="widget.pos.config.product_view == 'box'">
            <t t-set="product_image_size" t-value="widget.pos.config.product_image_size"/>
            <article class='product' t-att-data-product-id="product.id" tabindex="0"
                     t-attf-aria-labelledby="article_product_#{product.id}">
                <t t-set="out_stock"
                   t-value="product.qty_available == 0 or !product.qty_available or product.qty_available &lt; 0"/>
                <t t-if="!widget.pos.config.hide_product_image">
                    <t t-if="product_image_size == 'big'">
                        <div class="product-img-big">
                            <img t-att-src='image_url'/>
                        </div>
                    </t>
                    <t t-if="product_image_size == 'small'">
                        <div class="product-img-small">
                            <img t-att-src='image_url'/>
                        </div>
                    </t>
                    <t t-if="product_image_size == 'default'">
                        <div class="product-img">
                            <img t-att-src='image_url'/>
                        </div>
                    </t>
                </t>
                <t t-if="widget.pos.get_packaging_by_product(product)">
                    <span class="sale_with_package">
                        <img src="/pos_retail/static/src/icons/box_packaging.png" class="right_pane_logo"/>
                    </span>
                </t>
                <t t-if="product.pos_sequence">
                    <span class="product_sequence">
                        Secuencia: <t t-esc="product.pos_sequence"/>
                    </span>
                </t>
                <t t-call="ProductPrice"/>
                <t t-if="widget.pos.config.display_onhand">
                    <t t-if="product['type'] == 'product'">
                        <t t-set="warning_out_stock" t-value="product.qty_available - product.qty_warning_out_stock"/>
                        <t t-if="out_stock">
                             <div class="ribbon"><span style="background: #f44336">Sin Inventario</span></div>
                        </t>
                        <t t-if="!out_stock and warning_out_stock &lt; 0">
                            <div class="ribbon"><span style="background: #f44336">Inventario mínimo</span></div>
                        </t>
                    </t>
                </t>
                <t t-if="product.is_combo">
                    <div class="ribbon"><span>Combo/Paquete</span></div>
                </t>
                <t t-if="product.sale_extra">
                    <div class="ribbon"><span>Venta extra</span></div>
                </t>
                <t t-if="product.is_credit">
                    <div class="ribbon"><span>Crédito</span></div>
                </t>
                <t t-if="product.multi_uom">
                    <div class="ribbon"><span>Unidades</span></div>
                </t>
                <t t-if="product.multi_variant">
                    <div class="ribbon"><span>Variantes</span></div>
                </t>
                <t t-if="product.cross_selling">
                    <div class="ribbon"><span>Venta cruzada</span></div>
                </t>
                <t t-if="product.is_voucher">
                    <div class="ribbon"><span>Voucher</span></div>
                </t>
                <div class="product-name">
                    <t t-if="widget.pos.config.display_product_ref">
                        <t t-call="product_name"/>
                        <t t-if="product['default_code']">
                            [ <t t-esc="product['default_code']"/> ]
                        </t>
                        <t t-if="widget.pos.config.display_cost_price">
                             [ Costo: <t t-esc="widget.format_currency(product.standard_price, 'Product Price')"/> ]
                        </t>
                    </t>
                    <t t-if="!widget.pos.config.display_product_ref">
                        <t t-call="product_name"/>
                        <t t-if="widget.pos.config.display_cost_price">
                            [ Costo: <t t-esc="widget.format_currency(product.standard_price, 'Product Price')"/>]
                        </t>
                    </t>
                    <t t-if="widget.pos.config.display_onhand">
                        <t t-call="product_onhand"/>
                    </t>
                </div>
            </article>
        </t>
    </t>

    <t t-extend="ProductScreenWidget">
        <t t-jquery="div[class*='leftpane']" t-operation="replace"/>
        <t t-jquery="div[class*='control-buttons']" t-operation="replace"/>
        <t t-jquery="div[class*='rightpane']" t-operation="replace">
            <div class="placeholder-SideBar"/>
            <div class="leftpane">
                <div class='window'>
                    <div class='subwindow'>
                        <div class='subwindow-container'>
                            <div class='subwindow-container-fix'>
                                <div class="placeholder-OrderWidget"></div>
                            </div>
                        </div>
                    </div>

                    <div class='subwindow collapsed'>
                        <div class='subwindow-container'>
                            <div class='subwindow-container-fix pads footer_cart'>
                                <div class="placeholder-ActionpadWidget"></div>
                                <div class="placeholder-NumpadWidget"></div>
                                <div class="placeholder-NumpadWidgetBackUp"></div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <div class="rightpane">
                <table class="layout-table">
                    <tr class="header-row">
                        <td class="header-cell">
                            <span class="placeholder-ProductCategoriesWidget"/>
                        </td>
                    </tr>
                    <tr class="content-row">
                        <td class="content-cell">
                            <div class="content-container">
                                <span class="placeholder-ProductListWidget"/>
                                <div class="placeholder-Base"/>
                            </div>
                        </td>
                    </tr>
                </table>
            </div>
            <div class="content-cell">
                <div class="content-container shortcut_screens">
                    <span class="placeholder-screens"/>
                </div>
            </div>
            <div class="placeholder-OrderLineSelected"/>
            <div class="placeholder-ViewCartListWidget"/>
        </t>
        <t t-jquery="tr[class*='header-row']" t-operation="replace">
            <t t-if="widget.pos.config.allow_add_product">
                <tr class="header-row">
                    <td class="header-cell">
                        <span class="placeholder-ProductCategoriesWidget"/>
                    </td>
                </tr>
            </t>
            <t t-if="!widget.pos.config.allow_add_product">
               <tr class="header-row" style="display:none">
                    <td class="header-cell">
                        <span class="placeholder-ProductCategoriesWidget"/>
                    </td>
                </tr>
            </t>
        </t>
        <t t-jquery="div[class*='pads']" t-operation="before">
            <div class="control-buttons-extend oe_hidden"/>
        </t>
    </t>

    <t t-extend="ProductCategoriesWidget">
        <t t-jquery="div[class*='breadcrumbs']" t-operation="replace">
            <div class="breadcrumbs">
                <t t-foreach="widget.breadcrumb" t-as="category">
                    <span class="breadcrumb">
                        <i class="material-icons">fecha_derecha</i>
                        <span class="breadcrumb-button js-category-switch" t-att-data-category-id="category.id">
                            <t t-esc="category.name"/>
                        </span>
                    </span>
                </t>
            </div>
        </t>
        <t t-jquery="span[class*='breadcrumb-home']" t-operation="replace"/>
        <t t-jquery="div[class*='searchbox']" t-operation="replace"/>
        <t t-jquery="div[class*='categories']" t-operation="replace">
            <div class="categories oe_hidden">
                <div class="category-list-scroller touch-scrollable">
                    <div class="category-list">
                    </div>
                </div>
            </div>
        </t>
        <t t-jquery="header[class*='rightpane-header']" t-operation="before">
            <div class="header-category">
                <span class=" breadcrumb-button breadcrumb-home js-category-switch">
                    <div class="category_home">
                        <img src="/pos_retail/static/src/icons/home.png" class="category_home_icon"/>
                        <span class="keyboard-shortcut">H</span>
                    </div>
                </span>
                <span class="show_hide_categories categories-list">
                    <t t-if="!widget.hidden_categories">
                        <i class="material-icons">no_visible</i>
                    </t>
                    <t t-else="">
                        <i class="material-icons oe_red">visible</i>
                    </t>
                </span>
                <t t-if="widget.pos.config.allow_customer">
                    <div class="search-box find_customer"
                         title="Fast find Client via Phone/Mobile here. Keyboard Event: k">
                        <input autocomplete="off" class="ui-autocomplete-input find_partner_input" id="find_partner_id"
                               placeholder="Search Customers"/>
                        <span class="keyboard-shortcut">( K )</span>
                        <span class="search-clear left">
                            <i class="fa fa-search"></i>
                        </span>
                        <t t-if="widget.pos.config.add_client">
                            <button class="btn add-new-client">
                                <i class="material-icons" style="margin-top: 5px">agregar_persona</i>
                                <span class="keyboard-shortcut">A</span>
                            </button>
                        </t>
                        <button class="btn open-clientlist">
                            <i class="material-icons" style="margin-top: 5px">list</i>
                            <span class="keyboard-shortcut">
                                <i class="fa fa-keyboard"/>
                                C o Espacio
                            </span>
                        </button>
                    </div>
                </t>
                <div class="searchbox search-products">
                    <input class="search-products" placeholder="Search Products (Quit ESC)"/>
                    <span class="search-clear left">
                        <i class="fa fa-search"/>
                    </span>
                    <span class="search-clear right">
                        <i class="fa fa-remove"/>
                    </span>
                    <t t-if="widget.pos.config.product_operation and !widget.pos.pos_session.mobile_responsive">
                        <button class="btn btn-default btn-round btn-just-icon new-product">
                            <i class="material-icons">agregar</i>
                            <span class="keyboard-shortcut">E</span>
                        </button>
                        <button class="btn btn-default btn-round btn-just-icon new-product-categ">
                            <i class="material-icons">crear</i>
                            <span class="keyboard-shortcut">W</span>
                        </button>
                    </t>
                </div>
            </div>
        </t>

    </t>

    <t t-extend="CategorySimpleButton">
        <t t-jquery="span[class*='category-simple-button']" t-operation="replace">
            <span class='category-simple-button js-category-switch' t-att-data-category-id="category.id">
                <t t-esc="category.name"/>
            </span>
        </t>
    </t>

    <t t-name="ProductSortWidget">
        <div class="oe_status shop_logo products-sort-by" title="Sort By Products">
            <span class='js_msg oe_hidden'>0</span>
            <img class="logo_shop_header" src="/pos_retail/static/src/icons/sort_by.png" title="Products sort"/>
        </div>
    </t>

    <t t-name="ProductViewTypeWidget">
        <div class="oe_status js_synch products-view-type">
            <span class='js_msg oe_hidden'>0</span>
            <div class="js_connected oe_icon">
                <i class='fa fa-fw fa-th' role="img" aria-label="List" title="Product List View, Keyboard Event: v"></i>
            </div>
            <div class="js_connecting oe_icon oe_hidden">
                <i class='fa fa-fw fa-list' role="img" aria-label="Box" title="Product Box View, Keyboard Event: v"></i>
            </div>
            <span class="keyboard-shortcut">V</span>
        </div>
    </t>

</templates>
